{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "mapRoot": "",
    "skipLibCheck": true,
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "stripInternal": true,
    "paths": {
      "@angular/core": ["node_modules/@angular/core"],
    }
  },
  "files": ["./src/index.ts"],
  "exclude": ["node_modules"],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "debug": true
  },
  "sourceMap": true,

}
